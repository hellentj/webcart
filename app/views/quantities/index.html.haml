.container
  %h5
    = @product.product_name
  %br/
  %table.table
    %thead
      %tr
        %th Size
        %th Colour
        %th Quantity
        %th Actions
        %th{:colspan => "3"}
    %tbody
      - @quantities.each do |q|
        %tr
          %td= q.size.size
          %td= q.colour.colour
          %td= q.quantity
          %td= link_to 'Edit Quantity', edit_quantity_path(q,product: @product)
          %td= link_to image_tag("delete.png", size:"25x25"), quantity_path(q), method: :delete,data: { confirm: 'Are you sure?' }
  .text-right
    %h4
      = link_to 'Add new quantity',new_quantity_path(product: @product)
  %h5
    = link_to 'Back',  seller_product_path(current_user.seller, @product)