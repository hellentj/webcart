.container
  %table.table.table-hover
    %thead
      %tr
        %th Size
        %th
          Actions
        %th
    %tbody
      - @sizes.each do |s|
        %tr
          %td= s.size
          %td= link_to 'edit' , edit_size_path(s)
          %td= link_to image_tag("delete.png", size:"25x25"), s, method: :delete, data: { confirm: 'Are you sure?' }
  .text-right
    %h4
      = link_to image_tag("add.png", size:"40x40"), new_size_path
  %h4
    = link_to image_tag("back.jpeg", size:"40x40"), admins_path