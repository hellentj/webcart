.container
  %table.table.table-hover
    %thead
      %tr
        %th Product Name
        %th Category
        %th Price
        %th Sold
        %th Actions
        %th
    %tbody
      - @products.each do |product|
        %tr
          %td= product.product_name
          %td= product.category.category_name
          %td
            â‚¹
            = product.price
          %td= product.sold
          %td= link_to image_tag("view.png", size:"25x25"), product_details_admin_path(product)
          %td
            - if product.unblock?
              = link_to image_tag("unblock.png", size:"25x25"), block_user_admin_path(product: product)
            - else
              = link_to image_tag("block.png", size:"25x25"),unblock_user_admin_path(product: product)
  = will_paginate @products, class: :flickr_pagination