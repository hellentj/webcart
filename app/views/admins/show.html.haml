.container
  %table.table.table-hover
    %thead
      %tr
        %th.font_color
          Customers
        %th          
        %th.font_color
          Email
        %th.font_color
          Orders
        %th.font_color
          Actions
        %th
        %th
    %tbody
      - @customers.each do |customer|
        %tr
          %td= customer.first_name
          %td= customer.last_name
          %td= customer.user.email
          %td= customer.orders.count
          - if customer.user.unblock?
            %td= link_to image_tag("unblock.png", size:"25x25"),block_user_admin_path(user: customer.user)
          - else
            %td= link_to image_tag("block.png", size:"25x25"),unblock_user_admin_path(user: customer.user)
          %td= link_to image_tag("vprofile.jpeg", size:"25x25"), customer_path(customer)
          %td
            = link_to image_tag("delete.png", size:"25x25"), user_registration_path(user: customer.user), method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  %br/

  = will_paginate @customers, class: :flickr_pagination