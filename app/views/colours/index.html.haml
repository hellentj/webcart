.container
  %h1 Colours
  %table.table.table-hover
    %thead
      %tr
        %th Colour
        %th
        %th
    %tbody
      - @colours.each do |color|
        %tr
          %td= color.colour
          %td= link_to 'Edit', edit_colour_path(color)
          %td= link_to image_tag("delete.png", size:"25x25"), color, method: :delete, data: { confirm: 'Are you sure?' }
  .text-right
    %h4
      = link_to image_tag("add.png", size:"40x40"), new_colour_path
  %h4
    = link_to image_tag("back.jpeg", size:"40x40"), admins_path
