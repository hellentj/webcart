%table
  %thead
    %tr
      %th Product Name
      %th Details
      %th Price
      %th Quantity
      %th Category
      %th{:colspan => "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.product_name
        %td= product.about
        %td= product.price
        %td= product.quantity
        %td= product.category_id
        %td= link_to 'Add images', new_image_path
        %td= link_to 'Destroy', seller_product_path(current_user.seller,product), method: :delete,data: { confirm: 'Are you sure?' }
= link_to 'Add new product', new_seller_product_path
= link_to 'Back', sellers_path